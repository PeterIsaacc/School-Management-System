@model SchoolManagementSystem.Models.ErrorViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Error</title>
</head>
<body>
    <h1>Error</h1>
    <p>
        @switch (Model.StatusCode)
        {
            case 404:
                @:The page you're looking for can't be found.
                break;
            case 500:
                @:An internal server error occurred. Please try again later.
                break;
            default:
                @Model.Message
                break;
        }
    </p>
</body>
</html>