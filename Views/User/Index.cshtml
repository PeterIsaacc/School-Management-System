@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h1>Users</h1>

<div class="table-responsive">
    <p>
        <a asp-controller="Account" asp-action="Register">Register New User</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="UserRoles" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Manage User Roles</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table td, .table th {
        padding: .3rem; 
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }
    .btn-sm {
        padding: .25rem .5rem;
        font-size: .875rem;
        line-height: 1.5;
        border-radius: .2rem;
    }
</style>